<!DOCTYPE api-specification SYSTEM "@MUST_SPECIFICATION_DTD_PATH@/api-specification.dtd">
<api-specification unique-name="EuroMpi2011Api">
    <api-headers>
        <header>BarrierReductionApi.h</header>
    </api-headers>
    <functions>
        <function return-type="int" name="reducedBarrier" wrapp-everywhere="yes">
            <function-arguments>
                <function-argument order="0" name="tMin" type="unsigned long long" intent="in">
                </function-argument>
                <function-argument order="1" name="tMax" type="unsigned long long" intent="in" />
            </function-arguments>
            <analyses>
                <analysis order="pre" name="BarrierReduction:reduce" group="EuroMpi2011">
                    <analysis-arguments>
                        <analysis-argument type="mapped" analysis-arg-order="0">
                            <call-arg-name>tMin</call-arg-name>
                        </analysis-argument>
                        <analysis-argument type="mapped" analysis-arg-order="1">
                            <call-arg-name>tMax</call-arg-name>
                        </analysis-argument>
                    </analysis-arguments>
                </analysis>
                <analysis order="pre" name="EvaluateBarriers:newBarrier" group="EuroMpi2011">
                    <analysis-arguments>
                        <analysis-argument type="mapped" analysis-arg-order="0">
                            <call-arg-name>tMin</call-arg-name>
                        </analysis-argument>
                        <analysis-argument type="mapped" analysis-arg-order="1">
                            <call-arg-name>tMax</call-arg-name>
                        </analysis-argument>
                    </analysis-arguments>
                </analysis>
            </analyses>
            <operations>
            </operations>
        </function>
    </functions>
</api-specification>
